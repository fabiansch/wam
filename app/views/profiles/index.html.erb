<div id="profiles" class="transitions-enabled">
  <% @profiles.each do |profile| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(profile.image.url(:medium)), profile %>
      <div class="panel-body">
        <%= profile.name %>
        <%= profile.job %>
        <%= profile.city %>
        <%= profile.aboutme %>
        <%= profile.email %>
        <%= link_to 'Show', profile %>
        <% if profile.user == current_user %>
          <%= link_to 'Edit', edit_profile_path(profile) %></td>
          <%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>