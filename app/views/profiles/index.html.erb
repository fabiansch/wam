<%= render 'pages/home' unless user_signed_in? %>
<% if current_user %>
  <%= render 'pages/new_profile' if current_user.profile.nil? %>
<% end %>

<div id="profiles" class="transitions-enabled">
  <% @profiles.each do |profile| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(profile.image.url(:medium)), profile %>
      <div class="panel-body">
        <%= profile.name %>
        <%= profile.job %>
        <%= profile.city %>
        <%= profile.aboutme %>
        <%= profile.email %>
        <%= link_to 'Show', profile %>
        <% if profile.user == current_user %>
          <%= link_to edit_profile_path(profile) do %>
              <span class="glyphicon glyphicon-edit"></span>
              Edit
          <% end %>
          <%= link_to profile, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>